<div class="field form-group col-md-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <%= manager.type_manager_text %> - <%= manager.get_local %> | <%= manager.election.year %>
    </div>
    <div class="panel-body">
      <div>
        <div class="pull-left title-2">
          <%= link_to manager.name, manager %>
        </div>
        <div class="pull-right">
          <i class="glyphicon glyphicon-star-empty title-1"></i>
        </div>
      </div>
      <div class="pull-left">
        <br />
        <% resume = manager.get_resume_promises %>
        <span class="title-2">Total de promessas: <%= resume[:total] %></span><br />
        Cumpridas: <%= resume[:finished][:count] %> |
        Pendetes: <%= resume[:opened][:count] %><br />
        <br />
        <%= render 'bar', perc: resume[:finished][:perc] %>
        <br />
        <% text_promise = resume[:total] == 0 ? 'CADASTRAR A PRIMEIRA PROMESSA' : 'EXIBIR / CADASTRAR PROMESSAS' %>
        <%= link_to text_promise, manager_promises_path(manager), class: 'btn btn-info', :title => "Show Promises" %>
      </div>
    </div>
  </div>
</div>
