<p id="notice"><%= notice %></p>
<h3>Manager</h3>
<p><%= link_to @manager.name, manager_path(@manager) %></p>

<h1>Promises</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date finish</th>
      <th>Description finish</th>
      <th>User create</th>
      <th>User finish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promises.each do |promise| %>
      <tr>
        <td><%= promise.description %></td>
        <td><%= promise.date_finish %></td>
        <td><%= promise.description_finish %></td>
        <td><%= promise.user_create_id %></td>
        <td><%= promise.user_finish %></td>
        <td><%= link_to 'Show', manager_promise_path(@manager, promise) %></td>
        <td><%= link_to 'Edit', edit_manager_promise_path(@manager, promise) %></td>
        <td><%= link_to 'Destroy', manager_promise_path(@manager, promise), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

