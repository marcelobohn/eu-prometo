<p id="notice"><%= notice %></p>

<%= render 'manager', manager: @manager %>

<h1>Promises</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th style="width: 700px">Description</th>
        <th style="width: 200px">User create</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @promises.each do |promise| %>
        <tr>
          <td>
              <%= link_to promise.description, manager_promise_path(@manager, promise), :title => "Show" %>
          </td>
          <td><%= promise.user_create_id ? User.find(promise.user_create_id).email : '' %></td>
          <td>
            <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_manager_promise_path(@manager, promise), class: 'btn btn-primary', :title => "Edit" %>
            <%#= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, manager_promise_path(@manager, promise), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', :title => "Delete" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to '<i class="glyphicon glyphicon-file"></i> New Promise'.html_safe, new_manager_promise_path, class: 'btn btn-primary' %>
