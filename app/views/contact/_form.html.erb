<%#= form_with(model: contact_path, local: true) do |form| %>
<%= form_for contact_path do |form| %>
  <div class="row">
    <div class="field form-group col-md-3">
      <%= form.label :type_contact %>
      <%= form.select :type_contact, @type_contact, {}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
    </div>
  </div>

  <div class="row">
    <div class="field form-group col-md-8">
      <%= form.label :name %>
      <%= form.text_field :name, id: :contact_name, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="field form-group col-md-8">
      <%= form.label :email %>
      <%= form.text_field :email, id: :contact_email, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="field form-group col-md-12">
      <%= form.label :description %>
      <%= form.text_area :description, id: :promise_description, class: 'form-control' %>
    </div>
  </div>  


  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
